{
  "$schema": "https://json.schemastore.org/package",
  "private": true,
  "name": "configurations",
  "version": "0.0.0-development",
  "author": {
    "name": "Mateusz Kadlubowski",
    "email": "xeho91@pm.me",
    "url": "https://xeho91.com/"
  },
  "license": "MIT",
  "homepage": "https://github.com/xeho91/configurations",
  "repository": "xeho91/configurations.git",
  "bugs": "https://github.com/xeho91/configurations/issues",
  "engines": {
    "node": ">=14"
  },
	"scripts": {
    "build": "tsc",
		"commit": "gacp",
		"format": "prettier --write \"source/*/**\"",
		"lint": "run-p lint:*",
		"lint:commits": "commitlint --from \"develop\" --to \"HEAD\"",
		"lint:ls": "ls-lint",
		"lint:js": "eslint \"source/**/*.{js,cjs,mjs,ts}\"",
		"lint:staged": "lint-staged --verbose",
		"lint:ts": "tsc --project \"tsconfig.json\" --noEmit",
		"prepare": "husky install"
	},
	"devDependencies": {
		"@ls-lint/ls-lint": "^1.10.0",
		"@types/node": "^16.4.13",
		"@xeho91/commitlint-config": "^0.1.0",
		"@xeho91/eslint-config": "^0.6.0",
		"@xeho91/prettier-config": "^0.2.0",
		"commitlint": "^13.1.0",
		"eslint": "^7.32.0",
		"gacp": "^2.10.2",
		"husky": "^7.0.1",
		"lint-staged": "^11.1.2",
		"npm-run-all": "^4.1.5",
    "syncpack": "^5.8.15",
		"prettier": "^2.3.2",
		"tslib": "^2.3.0",
		"typescript": "^4.3.5"
	}
}
